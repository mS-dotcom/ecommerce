
@{
    ViewBag.Title = "Siparisler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<BolsaDePapel.Models.Satis>
<br /><br /><br />
<h1>Siparişler</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Satış ID</th>
                        <th scope="col">Durum</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Toplam Tutar</th>
                        <th scope="col">Müşteri Adı</th>
                        <th scope="col">Tarih</th>
                        <th scope="col">Siparişe Bak</th>
                        <th scope="col">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <th scope="row">@item.ID</th>
                            <td>@item.Durum</td>
                            <td>@item.Aciklama</td>
                            <td>@item.ToplamTutar</td>
                            <td>@item.Musteri.Adi @item.Musteri.Soyadi</td>
                            <td>@item.Tarih</td>
                            <td><a class="delete" href="/Admin/SiparisDetay/@item.ID"><i class="icon-eye-open"></i></a></td>
                            <td><a class="delete" href="/Admin/SiparisSil/@item.ID"><i class="icon-trash"></i></a></td>
                        </tr>
                    }

                </tbody>
                <div style="float:right; padding-right:5px;">
                    <form method="post" action="/Admin/SiparisTarihGetir">
                        İlk Tarih
                        <input name="ilkTarih" type="date" />
                        Son Tarih
                        <input name="sonTarih" type="date" />
                        <input style="border-radius:20px;" class="btn btn-danger" type="submit" value="Tarihe Git" />
                    </form>
                </div>
            </table>
        </div>
    </div>
</div>