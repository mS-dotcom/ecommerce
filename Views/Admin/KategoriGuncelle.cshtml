
@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model BolsaDePapel.Models.Kategori
<h2>Kategori Güncelle</h2>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Güncelle
            </header>

            <div class="panel-body">

                <form role="form" action="/Admin/KategoriGuncelle" method="post" class="form-horizontal tasi-form">
                    <input type="hidden" name="ID" value="@Model.ID" />
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Kategori Adı</label>
                        <div class="col-lg-10">
                            <input type="text" value="@Model.Adi" placeholder="" name="Adi" id="f-name" class="form-control">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" value="@Model.Aciklama" name="Aciklama" id="l-name" class="form-control">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input class="btn btn-danger" type="submit" value="Kaydet" />
                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>
