
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<BolsaDePapel.Models.Marka>
<br /><br /><br />
<h2>Markalar</h2>

<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/MarkaEkle" class="btn btn-success">
                        Yeni Marka<i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <th>Marka Güncelle</th>
                        <th>Marka Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marka in Model)
                    {
                        <tr class="">
                            <td>@marka.Adi</td>
                            <td>@marka.Aciklama</td>
                            <td><a class="edit" href="/Admin/MarkaGuncelle/@marka.ID"><i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/Admin/MarkaSil/@marka.ID"><i class="icon-trash"></i></a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>