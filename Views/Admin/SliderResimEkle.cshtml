
@{
    ViewBag.Title = "Slider Resim Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br /><br /><br /><br />
<h2>Slider Resmi Ekle</h2>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Slider Resmi Ekle
            </header>

            <div class="panel-body">
                <form class="form-horizontal tasi-form" enctype="multipart/form-data" method="post" action="/Admin/SliderResimEkle">
                    <div class="form-group">
                        <label>Açıklama</label>
                        <div class="col-lg-offset-2 col-lg-10">
                            <input name="Aciklama" id="Aciklama" type="text" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Fotoğraf Seç</label>
                        <div class="col-lg-offset-2 col-lg-10">
                            <input name="file" type="file" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>


