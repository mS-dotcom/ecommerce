
@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@section head{
    <script type="text/javascript" src="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script type="text/javascript" src="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>
    <script type="text/javascript" src="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <script type="text/javascript" src="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-daterangepicker/moment.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-datepicker/css/datepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-timepicker/compiled/timepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-colorpicker/css/colorpicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-daterangepicker/daterangepicker-bs3.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Flatlab Main Files/admin/template_content/assets/bootstrap-datetimepicker/css/datetimepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Flatlab Main Files/admin/template_content/assets/jquery-multi-select/css/multi-select.css" />
}
@model BolsaDePapel.Models.Urun
<br /><br /><br />

<h2>Ürün Güncelle</h2>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Güncelle
            </header>
            <div class="panel-body">
                <form role="form" action="/Admin/UrunGuncelle" method="post" class="form-horizontal tasi-form">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-10">
                            <input type="text" value="@Model.Adi" placeholder="" name="Adi" id="f-name" class="form-control">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" value="@Model.Aciklama" name="Aciklama" id="l-name" class="form-control">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Alış Fiyatı</label>
                        <div class="col-lg-10">
                            <input type="text" value="@Model.AlisFiyat" name="AlisFiyat" class="spinner-input form-control">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Satış Fiyatı</label>
                        <div class="col-lg-10">
                            <input type="text" name="SatisFiyat" value="@Model.SatisFiyat" class="spinner-input form-control">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kategori:</label>
                        <div class="col-lg-3">
                            <select name="KategoriID" class="form-control m-bot15">
                                @foreach (var kategori in ViewBag.Kategoriler)
                                {
                                    if (kategori.Adi == Model.Kategori.Adi)
                                    {
                                        <option selected="selected" value="@kategori.ID">@kategori.Adi</option>
                                    }
                                    else
                                    {
                                        <option value="@kategori.ID">@kategori.Adi</option>
                                    }

                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Marka</label>
                        <div class="col-lg-3">
                            <select name="MarkaID" class="form-control m-bot15">
                                @foreach (var marka in ViewBag.Markalar)
                                {
                                    if (marka.Adi == Model.Marka.Adi)
                                    {
                                        <option selected="selected" value="@marka.ID">@marka.Adi</option>
                                    }
                                    else
                                    {
                                        <option value="@marka.ID">@marka.Adi</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Son Kullanma Tarihi</label>
                        <div class="col-md-4">
                            <div data-date="2012-12-21T15:25:00Z" class="input-group date form_datetime-adv">
                                <input type="date" value="@Model.SonKullanmaTarihi" name="SonKullanmaTarihi" class="form-control" size="16">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>

</div>
