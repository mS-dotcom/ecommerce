
@{
    ViewBag.Title = "Bolsa De Papel Personalizada";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
@model BolsaDePapel.Models.Urun
<!-- ======================================================================
                                        START CONTENT
        ======================================================================= -->
<form method="post" action="/Home/Product" enctype="multipart/form-data">
    <div class="content">
        <div class="product-one">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="the-slider product-big-image" data-tesla-plugin="slider" data-tesla-item=".slide" data-tesla-next=".product-image-arrows-right" data-tesla-prev=".product-image-arrows-left" data-tesla-container=".slide-wrapper">
                            <ul class="product-image-arrows">
                                <li class="product-image-arrows-left"><i class="icon-517" title="left"></i></li>
                                <li class="product-image-arrows-right"><i class="icon-501" title="right"></i></li>
                            </ul>
                            <ul class="slide-wrapper">
                                @foreach (var resimler in ViewBag.Resimler)
                                {
                                    <li class="slide"><img style="height:375px;width:375px;" src="~/Content/Resim/@resimler.OrtaYol" alt="product image" /></li>
                                }

                            </ul>
                            <div class="row">
                                <ul class="the-bullets-dots" data-tesla-plugin="bullets">
                                    @foreach (var resimler in ViewBag.Resimler)
                                    {
                                        <li><div class="col-md-2 col-xs-2"><img src="~/Content/Resim/@resimler.OrtaYol" alt="product image" /></div></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h2>@Model.Adi</h2>
                        <input type="hidden" value="@Model.ID" name="id" />
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="product-price">PRICE: @Convert.ToInt32(Model.SatisFiyat) €</div>
                                <hr />
                                <b>Quantity : </b> <input type="text" name="Adet" value="1" title="Qty" class="input-text qty text">
                                <hr />
                                <b><i style="color:darkred">Agregue una foto del modelo que desea</i></b>
                                <input name="file" type="file" />
                            </div>
                            <div class="col-md-6">
                                <input type="submit" class="button-2" value="Add To Shopping Bag" />
                            </div>
                        </div>
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#description" data-toggle="tab">DESCRIPTION</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="description">
                                <p>@Model.Aciklama</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- ======================================================================
                                END CONTENT
======================================================================= -->
