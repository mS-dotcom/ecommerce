
@{
    ViewBag.Title = "Bolsa De Papel Personalizada";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
@model IEnumerable<BolsaDePapel.Models.Satis>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Satış ID</th>
                        <th scope="col">Durum</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Toplam Tutar</th>
                        <th scope="col">Tarih</th>
                        <th scope="col">Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.ID</th>
                            <td>@item.Durum</td>
                            <td>@item.Aciklama</td>
                            <td>@item.ToplamTutar</td>
                            <td>@Convert.ToDateTime(item.Tarih).ToShortDateString()</td>
                            <td><a href="/Home/SiparisDetay/@item.ID">Sipariş Detayı</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
